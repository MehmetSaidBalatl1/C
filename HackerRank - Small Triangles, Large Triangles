// HackerRank - Small Triangles, Large Triangles //
// Task 
You are given n triangles, specifically, their sides a, b and c. 
Print them in the same style but sorted by their areas from the smallest one to the largest one.
//
#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct triangle
{
	int a;
	int b;
	int c;
};

typedef struct triangle triangle;
void sort_by_area(triangle* tr, int n) {
	double *area = (double*)malloc(n*sizeof(double));
    for(int i=0;i<n;i++){
        double p = (tr[i].a + tr[i].b + tr[i].c)/2.0;
        area[i] = sqrt(p * (p-tr[i].a) * (p-tr[i].b) * (p-tr[i].c));
    }
    for (int i=0;i<n;i++){
        for(int j=0;j<n-1;j++){
            if(area[j]>area[j+1]){
            double temp1 = area[j];
            area[j] = area[j+1];
            area[j+1] = temp1;
            triangle temp2 = tr[j];
            tr[j] = tr[j+1];
            tr[j+1] = temp2;
            }    
        }    
    } 
}

