// HackerRank - Small Triangles, Large Triangles //
// Task 
You are given n triangles, specifically, their sides a, b and c. 
Print them in the same style but sorted by their areas from the smallest one to the largest one.
//

#include <stdio.h>
#include <stdlib.h>
#include <math.h>

struct triangle
{
	int a;
	int b;
	int c;
};

typedef struct triangle triangle;
void sort_by_area(triangle* tr, int n) {
    double *area = (double*)malloc(n*sizeof(triangle));
	for (int i=0;i<n;i++){
		double p = (tr[i].a + tr[i].b + tr[i].c);
		area[i] = sqrt(p * (p-tr[i].a) * (p-tr[i].b) * (p-tr[i].c));
	}
	for (int i=0;i<n;i++){
		for(int j=0; j<n-1;j++){
		if(area[j+1]<area[j]){
			double temp = area[j+1];
			area[j+1] = area [j];
			area[j] = temp;
			triangle tempo = tr[j];
			tr[j] = tr[j+1];
			tr[j+1] = tempo;
		}
	}
}
}

int main()
{
	int n;
	scanf("%d", &n);
	triangle *tr = malloc(n * sizeof(triangle));
	for (int i = 0; i < n; i++) {
		scanf("%d%d%d", &tr[i].a, &tr[i].b, &tr[i].c);
	}
	sort_by_area(tr, n);
	for (int i = 0; i < n; i++) {
		printf("%d %d %d\n", tr[i].a, tr[i].b, tr[i].c);
	}
	return 0;
}
